bindsym XF86AudioLowerVolume		exec --no-startup-id amixer set Master 5db-
bindsym XF86AudioRaiseVolume		exec --no-startup-id amixer set Master 5db+
bindsym XF86AudioMute			exec --no-startup-id amixer sset Master toggle

