# custom screenshot control
bindsym --release Print			exec --no-startup-id notify-send "Taking screenshot of display" && exec import -window root $HOME/Pictures/screenshots/$(date +%F_%H%M%S)_screen.png
bindsym --release $mod+Print		exec --no-startup-id notify-send "Taking screenshot of active window" && exec import -window "$activeWinId" $HOME/Pictures/screenshots/$(date +%F_%H%M%S)_window.png 
bindsym	--release $mod+Shift+Print	exec --no-startup-id notify-send "Select area for screenshot" && exec import $HOME/Pictures/screenshots/$(date +%F_%H%M%S)_selected.png

# pulseaudio control
